<title >Post a Slog</title>
<div class="container page-start">
  
  <div class="container col-md-6 col-md-offset-3">
    <h1>Post a Slog</h1>
    <!-- error messages -->
    <div class="alert alert-danger" ng-hide="!error">
      <span ng-bind="error" />
    </div>
    <form class="edit_user" ng-submit="save()">
      
      <div class="field">
        <label for="name">Description: </label>
        <input id="name" class="form-control" 
              type="text" ng-model="description" required/>
      </div>
      <div class="field">
        <label for="email">Departure: </label>
        <input id="email" class="form-control" 
              type="text" ng-model="departure_date" required/>
      </div>
      <div class="field">
        <label for="slog_type">Slog Type: </label>
        <select class="form-control" ng-model="slog_type" required>
          <option ng-repeat="type in slog_types" 
                  value="{{type.value}}" ng-bind="type.name">
          </option>
        </select>
      </div>
      <div class="field">
        <input type="submit" class="btn btn-primary" value="Slog!" />
      </div>
    </form>
  </div>
</div>