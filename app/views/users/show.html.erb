<p id="notice"><%= notice %></p>
<title><%= @user.name %></title>
<%= render '/shared/user_tabs' %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, {size: 100} %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.slogs.any? %>
      <h3>Slogs <font size="2">(<%= @user.slogs.count %>)</font></h3>
      <ol class="slogs">
        <%= #render '/slogs/slogs' 
            render @slogs %>
      </ol>
      <%= will_paginate @slogs %>
    <% else %>
      <h2>You have no posted slogs</h2>
      <p>click <%= link_to 'here', new_slog_path %> to post!</p>
    <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> 
<br>
<%= link_to 'Show All Users', users_path %> 
<br>
<%= link_to 'Post a Slog', new_slog_path %>
