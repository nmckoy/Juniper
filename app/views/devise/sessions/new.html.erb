<title>Signin to Awesome</title>
<div class="auth-bg">
  <div class="container col-md-12 page-start" >
    <div class="container col-md-offset-3 col-md-3 col-sm-4 col-sm-offset-3">
      <h2>Sign in</h2>
    
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control translucent-input", autofocus: true %>
        </div>
      
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: "form-control translucent-input", autocomplete: "off" %>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <div class="container social-logins col-md-3 col-sm-2">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <!-- because within each div there is ALWAYS 12 # of columns -->
          <div class="container col-xs-2 col-md-12">
            <%= provider_image provider.to_s.titleize, omniauth_authorize_path(resource_name, provider) %><br />
          </div>
        <% end -%>
      <% end -%>
    </div>
  </div>
</div>