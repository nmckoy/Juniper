<!DOCTYPE html>
<html>
<head>
  <title>Juniper</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <!--<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>-->
  <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>-->
  <!--<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>-->
  <![endif]-->
</head>
<body>
<nav class="navbar navbar-inverse navbar-static-top" role="banner">
    <div class="container-fluid">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#myCollapsable">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Slog", '../' , class: "navbar-brand"%>
      </div>
      <div class="collapse navbar-collapse" id="myCollapsable">
        <ul class="nav navbar-nav">
          <li><%= link_to "Home",    '../' %></li>
          <li><%= link_to "Slogs",    '#' %></li>
          <li><%= link_to "Help",    '#' %></li>
          <li><%= link_to "Contact",    '#' %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign in", 'login' %></li>
          <li><%= link_to "Sign up", 'signup' %></li>
        </ul>
      </div>
    </div>
</nav>
<div class="container">
    <%= yield %>
</div>
<div class="container-fluid">
    <%= render "layouts/footer" %>
    <%= debug(params) if Rails.env.development? %>
</div>
</body>
</html>
